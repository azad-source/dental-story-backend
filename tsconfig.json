{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~/*": ["./src/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "lib": ["es2015"],
  // "type": "module",
  "include": ["src"],
  "exclude": ["node_modules"]
}
